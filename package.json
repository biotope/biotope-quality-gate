{
  "name": "@biotope/quality-gate",
  "version": "1.0.3",
  "description": "Coding quality and standards enforcer on biotope projects",
  "author": "Biotope",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/biotope/biotope-quality-gate.git"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "bin": {
    "biotope-quality-gate": "./lib/index.js"
  },
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "npm run clean && tsc --project tsconfig.json",
    "lint": "npm run build && npm run lint:code && npm run lint:tests:helpers && npm run lint:tests",
    "lint:fix": "npm run build && npm run lint:code:fix && npm run lint:tests:helpers:fix && npm run lint:tests:fix",
    "lint:code": "node ./lib -c lint.config.js -p config,src,types,\"./*\"",
    "lint:code:fix": "node ./lib -c lint.config.js -p config,src,types,\"./*\" -f",
    "lint:tests": "node ./lib -t -p \"tests/*\"",
    "lint:tests:fix": "node ./lib -t -p \"tests/*\" -f",
    "lint:tests:helpers": "node ./lib -p tests/helpers",
    "lint:tests:helpers:fix": "node ./lib -p tests/helpers -f",
    "start": "npm run build",
    "test": "npm run lint && npm run test:jest",
    "test:jest": "jest --config jest.config.js --testRegex ./tests/*.spec.ts",
    "watch": "tsc --project tsconfig.json --watch"
  },
  "dependencies": {
    "@types/eslint": "~6.1",
    "@types/stylelint": "~9.10",
    "@typescript-eslint/eslint-plugin": "~2.9",
    "@typescript-eslint/parser": "~2.34.0",
    "commander": "~4.0",
    "eslint": "~6.7",
    "eslint-config-airbnb-base": "~14.0",
    "eslint-plugin-compat": "~3.3",
    "eslint-plugin-filenames": "~1.3",
    "eslint-plugin-import": "~2.18",
    "glob": "~7.1",
    "stylelint": "~12.0.1",
    "stylelint-config-recommended-scss": "~4.1",
    "stylelint-config-standard": "~19.0",
    "stylelint-no-unsupported-browser-features": "~4.0",
    "stylelint-scss": "~3.13",
    "typescript": "~3.7"
  },
  "devDependencies": {
    "@types/glob": "~7.1",
    "@types/jest": "~24.0",
    "eslint-plugin-jest": "~23.3.0",
    "jest": "~24.9",
    "rimraf": "~3.0",
    "ts-jest": "~24.2"
  }
}
