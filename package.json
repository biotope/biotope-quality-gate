{
  "name": "@biotope/quality-gate",
  "version": "2.0.0-rc.4",
  "description": "Coding quality and standards for biotope projects",
  "author": "Biotope",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/biotope/biotope-quality-gate.git"
  },
  "scripts": {
    "start": "npm run lint && npm test",
    "lint": "eslint \"./config/**/*.js\"",
    "lint:fix": "eslint \"./config/**/*.js\" --fix",
    "test": "npm run test:code && npm run test:style",
    "test:code": "eslint \"./tests/pass.js\" \"./tests/pass.ts\" && eslint -c ./config/.eslintrc-jest.js \"./tests/test-*.js\" \"./tests/test-*.ts\"",
    "test:style": "stylelint \"./tests/pass.css\" \"./tests/pass.scss\"",
    "release": "np"
  },
  "dependencies": {
    "@commitlint/cli": "^12.0",
    "@commitlint/config-conventional": "^12.0",
    "@typescript-eslint/eslint-plugin": "^4.15",
    "@typescript-eslint/parser": "^4.15",
    "eslint": "^7.20",
    "eslint-config-airbnb-base": "^14.2",
    "eslint-plugin-compat": "^3.9",
    "eslint-plugin-filenames": "^1.3",
    "eslint-plugin-import": "^2.22",
    "eslint-plugin-jest": "^24.1",
    "eslint-plugin-react": "^7.22",
    "stylelint": "^13.11",
    "stylelint-config-recommended-scss": "^4.2",
    "stylelint-config-standard": "^20.0",
    "stylelint-no-unsupported-browser-features": "^4.1",
    "stylelint-scss": "^3.19"
  },
  "devDependencies": {
    "@types/jest": "~26.0",
    "cz-conventional-changelog": "~3.3",
    "jest": "~26.2",
    "lint-staged": "~10.5",
    "np": "~7.4",
    "typescript": "~3.9"
  },
  "peerDependencies": {
    "@types/jest": "^26.0",
    "jest": "^26.6",
    "typescript": "^4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*": "npm run lint:fix"
  }
}
